@model FundoSantaElena.Models.Usuarios
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .card{
    border-radius: 10px;
    background: #fff;
    box-shadow: 0 6px 10px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
}
</style>

<div class="col d-flex justify-content-center">
    <div class="row col-sm-10">
        <div class="col">
            <div class="card col-md-4 offset-md-4 text-center" style="padding-left: 5px; padding-right: 5px;padding-bottom: 5px;">
                 <div style="height:10px;width:100%"></div>
                <div class="cardbody">

                    <form method="post" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Nombre" type="text" placeholder="Usuario"
                                class="form-control" />
                        </div>
                         <div style="height:10px;width:100%"></div>
                        <div class="form-group">
                            <input asp-for="Contrasenia" type="password"  placeholder="Contraseña"
                                class="form-control" />
                            
                        </div>
                        <div>
                           <input type="submit" class="btn btn-primary btn-block mt-4" asp-action="Index"
                            asp-controller="Usuario" style="width:100%" value="Iniciar Sesión" />
                            <div style="height:10px;width:100%"></div>
                            <a class="link-primary" >¿Olvidaste tu contraseña?</a>
                        
                       </div>
                         <div>
                             <hr>
                                   <a class="btn btn-success" asp-action="Create" asp-controller="Usuario" style="width:50%">Crear usuario</a>
                        
                         </div>          
                    </form>
                     
                </div>
                
            </div>
           
        </div>
    </div>
</div>


