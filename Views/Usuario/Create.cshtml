@model FundoSantaElena.Models.Usuarios
@{
    ViewData["Title"] = "Registrarte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .card{
    border-radius: 10px;
    background: #fff;
    box-shadow: 0 6px 10px rgba(0,0,0,.08), 0 0 6px rgba(0,0,0,.05);
}
  header{
    display:none;
    !important;
    }
</style>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3" style="background-color: #2C6975 !important;">
            <div class="container-fluid">
              <a class="navbar-brand text-white">  <i class='bx bxs-home-alt-2'></i> FundoSantaElena</a>
               
    
            </div>
        </nav>
<div class="col d-flex justify-content-center">
    <div class="row col-sm-10">
        <div class="col">
            <div class="card col-md-4 offset-md-4 text-center" style="padding-left: 5px; padding-right: 5px;padding-bottom: 5px;">
                 <div class="card-header" style="background-color:white">
                    <h3>Registrarte</h3>
                </div>
                <div class="cardbody">

                    <form method="post" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Nombre" type="text" placeholder="Usuario"
                                   class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"> </span>
                        </div>
                         <div style="height:10px;width:100%"></div>
                        <div class="form-group">
                            <input asp-for="Contrasenia" type="password" placeholder="Contraseña"
                                   class="form-control" />
                            <span asp-validation-for="Contrasenia" class="text-danger"> </span>
                        </div>
                        <div style="height:10px;width:100%"></div>
                        <input type="submit" class="btn btn-success "asp-action="Create"
                               asp-controller="Usuario" style="width:100%" value="Registrarte"/>
                    </form>
                </div>
                   <div>
                        <hr>
                        <a class="btn btn-success" class="btn btn-primary" asp-action="Index" asp-controller="Usuario" style="width:50%">Inicio</a>

                    </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
@{
    <partial name="_ValidationScriptsPartial" />

}


}