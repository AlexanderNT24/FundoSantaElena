@model FundoSantaElena.Models.Usuarios
@{
ViewData["Title"] = "Registrarte";
Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row col-sm-10">
        <div class="col">
            <div class="card mt-4 text-center">
                <div class="card-header">
                    <h3>Registro</h3>
                </div>
                <div class="cardbody">

                    <form method="post" asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <input asp-for="Nombre" type="text" placeholder="Usuario:"
                                class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"> </span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Contrasenia" type="password"  placeholder="Contraseña"
                                class="form-control" />
                            <span asp-validation-for="Contrasenia" class="text-danger"> </span>
                        </div>

                        <input type="submit" class="btn btn-primary btn-block mt-4" asp-action="Create"
                            asp-controller="Usuario" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
@{
<partial name="_ValidationScriptsPartial" />

}


}