@model  IEnumerable<FundoSantaElena.Models.Animal>

@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-lg-4" style="">
            <ul class="list-group">
                <li class="list-group-item active" aria-current="true" style="background-color: #68B2A0 !important;border-color: #68B2A0!important;">Lista de Ganado</li>
                @if (Model.Count() > 0)
                {

                    @foreach (var animal in Model)
                    {
                        <li class="list-group-item">@animal.Nombre - @animal.Raza</li>

                    }

                }
                else
                {
                    <li class="list-group-item"> No hay datos..</li>
                }

            </ul>


        </div>
        <div class="col-lg-8">
            <div class="card" style="width: 100%">
                <canvas class="card-img-top" id="grafica"></canvas>
                <div class="card-body">
                </div>
            </div>
        </div>

    </div>

    <div style="height:20px;width:100%"></div>

    <div class="row">
        <div class="col-lg-6">
            <ul class="list-group">
                <li class="list-group-item active" aria-current="true" style="background-color: #68B2A0 !important; border-color: #68B2A0!important;">Eventos Animales</li>
                <li class="list-group-item">Vaca Lola - Vacunada</li>

            </ul>
        </div>
        <div class="col-lg-6" >
             <canvas class="card-img-top" id="grafica2"></canvas>
        </div>
    </div>
</div>
<script>
    let canva = document.getElementById("grafica").getContext("2d");
    let canva2 = document.getElementById("grafica2").getContext("2d");
    var barColors = ["#68B2A0", "#CDE0C9","#E0ECDE","#68B2A0", "#CDE0C9","#E0ECDE","#68B2A0", "#CDE0C9","#E0ECDE","#68B2A0", "#CDE0C9","#E0ECDE"];

    var grafico = new Chart(canva, {
         options: {
                responsive: true,
                legend: {
                    position: 'bottom',
                },
                hover: {
                    mode: 'label'
                },
                scales: {
                    xAxes: [{
                            display: true,
                            scaleLabel: {
                                display: true,
                                labelString: 'Meses'
                            }
                        }],
                    yAxes: [{
                            display: true,
                            ticks: {
                                beginAtZero: true,
                                steps: 10,
                                stepValue: 5,
                                max: 20
                            }
                        }]
                },
                title: {
                    display: true,
                    text: 'Produccion Mensual'
                }
            },
        type: "bar",
        data: {
            labels: ["Enero", "Febrero", "Marzo","Abril","Mayo","Junio","Julio","Agosto","Septiembre","Ocubre","Noviembre","Diciembre"],
            datasets:[
                {
                    label:"",
                    backgroundColor:barColors,
                    borderColor:"rgb(0,255,0)",
                    data:[2,5,8,13,1,4,5,1,12,1,4,1]
                }
            ]


        }
    })
    var grafico2 = new Chart(canva2, {
         options: {
                responsive: true,
                legend: {
                    position: 'bottom',
                },
                hover: {
                    mode: 'label'
                },
                scales: {
                    xAxes: [{
                            display: true,
                            scaleLabel: {
                                display: true,

                            }
                        }],
                    yAxes: [{
                            display: true,
                            ticks: {
                                beginAtZero: true,
                                steps: 10,
                                stepValue: 5,
                                max: 20
                            }
                        }]
                },
                title: {
                    display: true,
                    text: 'Ganado'
                }
            },
        type: "bar",
        data: {
            labels: ["Vacas", "Toros", "Becerros"],
            datasets:[
                {
                    label:"",
                    backgroundColor:barColors,
                    borderColor:"rgb(0,255,0)",
                    data:[2,5,8]
                }
            ]


        }
    })
</script>